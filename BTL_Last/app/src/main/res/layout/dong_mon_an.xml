<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgBg"
        android:layout_width="380dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_img" />


    <ImageView
        android:id="@+id/hinh"
        android:layout_width="92dp"
        android:layout_height="88dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login" />


    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="Tên"




        android:textColor="#1c1c1c"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/hinh"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtChuThich"
        android:layout_width="259dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"




        android:text="Chú Thích"
        android:textColor="#4a4a4a"
        android:textSize="16sp"

        app:layout_constraintStart_toEndOf="@+id/hinh"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <TextView
        android:id="@+id/txtDiaChi"
        android:layout_width="259dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"




        android:text="Địa chỉ"
        android:textColor="#4a4a4a"

        app:layout_constraintBottom_toBottomOf="@+id/hinh"
        app:layout_constraintStart_toEndOf="@+id/hinh" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="28dp"
        android:layout_height="29dp"
        android:layout_gravity="end"

        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="@id/imgBg"


        app:layout_constraintTop_toTopOf="@id/hinh"
        app:srcCompat="@drawable/basket" />

    <ImageView
        android:id="@+id/imgSua"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgBg"
        app:layout_constraintEnd_toStartOf="@+id/imgDelete"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/hinh"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/enter" />


</androidx.constraintlayout.widget.ConstraintLayout>
