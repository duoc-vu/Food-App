<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuaMonAnActivity"
    tools:layout_editor_absoluteX="-2dp"
    tools:layout_editor_absoluteY="12dp">

    <EditText
        android:id="@+id/dialogedDiaChi"
        android:layout_width="292dp"
        android:layout_height="59dp"
        android:layout_marginTop="8dp"
        android:ems="10"

        android:hint="Nhap dia chi"
        android:inputType="text"
        android:textColor="#0A196E"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogedChuThich"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/dialogedChuThich"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="11dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="nhap chu thich"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:textAlignment="textStart"
        android:textColor="#0A196E"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogedName"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/dialogedName"
        android:layout_width="384dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="11dp"
        android:ems="10"
        android:hint="Nhap ten"
        android:inputType="textPersonName"
        android:textColor="#9C27B0"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/dialogHuy"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="94dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialogSave"
        app:layout_constraintTop_toBottomOf="@+id/dialogedDiaChi"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/dialogSave"
        android:layout_width="97dp"
        android:layout_height="72dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="21dp"
        app:layout_constraintEnd_toStartOf="@+id/dialogHuy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogedDiaChi"
        app:srcCompat="@android:drawable/ic_menu_save"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/dialogImgHinh"
        android:layout_width="202dp"
        android:layout_height="255dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login" />

    <ImageButton
        android:id="@+id/dialogCam"
        android:layout_width="79dp"
        android:layout_height="62dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogImgHinh"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <ImageButton
        android:id="@+id/dialogLib"
        android:layout_width="79dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toEndOf="@+id/dialogCam"
        app:layout_constraintTop_toBottomOf="@+id/dialogImgHinh"
        app:srcCompat="@mipmap/ic_launcher" />


</androidx.constraintlayout.widget.ConstraintLayout>

